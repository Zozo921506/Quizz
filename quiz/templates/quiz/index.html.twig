{% extends 'base.html.twig' %}

{% block title %}Choose a quiz{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% include 'navbar.html.twig' %}
<div class="example-wrapper">
    <h1>Choose a Quiz</h1>
    <ul>
        {% for quiz in quizz %}
            <li>
                <strong><a href = "{{ path('quizz', {title: quiz.title, id_categorie_id: quiz.id_categorie_id, name: quiz.name, id: quiz.id})}}">{{ quiz.name }}</a></strong>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
